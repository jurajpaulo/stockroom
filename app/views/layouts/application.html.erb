<!DOCTYPE html>
<html>
<head>
  <title>Stockroom</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div>
		<% if current_user %>
			Logged in: <%= current_user.email %>.
			<%= link_to "Log out", log_out_path %>
		<% else %>
			<%= link_to "Log in", log_in_path %>
		<% end %>
	</div>
	<br>
	<div>
		<%= link_to "Stockroom", stocks_path %> &nbsp;&nbsp;
		<%= link_to "Stockroom Log", stock_changes_path %> &nbsp;&nbsp;
		<%= link_to "Users", users_path %> &nbsp;&nbsp;
		<%= link_to "Session Log", session_events_path %> &nbsp;&nbsp;
	</div>
	<br>
	<% [:notice, :alert].each do |name| %>
	  <%= content_tag :div, flash[name], :class => 'green' if flash[name] %>
	<% end %>

<%= yield %>

</body>
</html>
