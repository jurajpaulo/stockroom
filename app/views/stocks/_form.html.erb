<%= form_for @stock do |f| %>
	<%= error_messages @stock.errors %>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :description %><br />
		<%= f.text_area :description, :rows => 5 %>
	</p>
	<p>
		<%= f.label :kind %><br />
		<%= f.select :kind, Stock::KIND %>
	</p>
	<p>
		<%= f.label :count %><br />
		<%= f.text_field :count %>
	</p>
	<p>
		<%= f.label :critical_level %><br />
		<%= f.text_field :critical_level %>
	</p>
	<p><%= f.submit %></p>
<% end %>
