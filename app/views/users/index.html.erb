<% title "Users" %>

<table>
	<tr>
		<th>Email</th>
		<th>Number of Logins</th>
		<th>Deleted</th>
		<th></th>
	</tr>
	<% for user in @users %>
	<tr>
		<td><%= user.email %></td>
		<td><%= user.session_events.created.count %></td>
		<td><%= user.deleted %></td>
		<td><%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete unless user.deleted %></td>
	</tr>
	<% end %>
</table>

<p><%= link_to "New User", new_user_path %></p>
