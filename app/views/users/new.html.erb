<% title "New User" %>

<%= form_for @user do |f| %>
	<%= error_messages @user.errors %>
	<p>
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation %>
	</p>
	<p><%= f.submit %></p>
<% end %>


<p><%= link_to "Back to List", users_path %></p>
